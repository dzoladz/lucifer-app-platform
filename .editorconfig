# ---------------------------------------------------------------------
# EditorConfig Spec: https://editorconfig-specification.readthedocs.io/
# ---------------------------------------------------------------------
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false
max_line_length = 119

# ---------------------------------------------------------------------
# Language-specific Configuration Options
# ---------------------------------------------------------------------


# Python
# ------
[*.py]
indent_size = 4
insert_final_newline = true


# Markdown
# --------
[*.md]
max_line_length = 80